#!/usr/bin/env lua
package.path = (os.getenv("SILE_PATH") and os.getenv("SILE_PATH").."/?.lua" or "") .. ';/usr/local/sile/?.lua;' .. package.path 
SILE = require("core/sile")
io.stdout:setvbuf 'no'
SILE.parseArguments()
print('This is SILE '..SILE.version)
if (arg and arg[1]) then
  SILE.readFile(arg[1])
else
  SILE.repl()
end